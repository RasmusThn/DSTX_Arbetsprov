@page "/report"
@using PresentationBlazor.Components


<PageTitle>Single Report</PageTitle>

<div class="content-container">
    <div class="text-container">
        <h1><em>Get Report by Id</em></h1>
    </div>

    <div class="form-container">

        <div class="form-group">
            <input @bind-value="@_reportID" type="text" placeholder="Report number" class="form-control" />
            <button class="btn btn-primary" @onclick="GetSingleReportAsync">Search</button>
        </div>

        @if (_timeReport != null)
        {
            <div class="result-container">
                <p>
                    Id = @_timeReport.Id <br />
                    Workplace Id = @_timeReport.WorkplaceId <br />
                    Hours = @_timeReport.Hours <br />
                    Date = @_timeReport.Date.ToShortDateString() <br />
                    Info = @_timeReport.Info
                </p>
            </div>
        }
        else
        {
            <div class="result-container">
                <p><em>No Report with that Id</em></p>
            </div>
        }
    </div>
    
        <ErrorComponent Error="@_error" ErrorMessage="@_errorMessage" />
    
</div>

